@model IEnumerable<receitando.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
<p>
    <a href=@Url.Action("Create", "Categoria") class="btn btn-primary"><span class="glyphicon glyphicon-plus">+Novo</span></a>
</p>

<table class="table">
    <tr class="btn-dark">
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a class="btn btn-warning center" href=@Url.Action("Details", "Categoria", new {id = item.Id})><span class="glyphicon glyphicon-eye-open">Detalhes</span></a>
                <a class="btn btn-success  orange center" href=@Url.Action("Edit", "Categoria", new {id = item.Id})><span class="glyphicon glyphicon-pencil">Editar</span></a>
                <a class="btn btn-danger center" href=@Url.Action("Delete", "Categoria", new {id = item.Id})><span class="glyphicon glyphicon-trash">Excluir</span></a>
               
            </td>
        </tr>
    }

</table>
