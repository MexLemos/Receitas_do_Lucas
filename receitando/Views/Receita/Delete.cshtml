@model receitando.Models.Receita

@{
    ViewBag.Title = "Delete";
}

<h4>Receita</h4>

<h1><span class="glyphicon glyphicon-trash red-text">Exclusão</span></h1>
<h5><strong class="red-text"> Deseja realmente excluir a Receita "@Html.DisplayFor(model => model.Descricao)" do sistema?</strong></h5>
<div>
    <h6>Detalhes</h6>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type='button' onclick='history.back();' value='Voltar' class="btn btn-warning" />
        </div>
    }
</div>
