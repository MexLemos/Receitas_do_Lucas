@model receitando.Models.ReceitaDetalhes

@{
    ViewBag.Title = "Detalhes";
}

<h2>@Html.DisplayFor(model => model.receita.Nome)</h2>

<div>
    @Html.DisplayFor(model => model.receita.Imagem)
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.receita.Ingredientes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.Ingredientes)
        </dd>

        <dt>
            Modo de Preparo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.Descricao)
        </dd>

        <dt>
            Veja os detalhes no vídeo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.Video)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.receita.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.receita.Sugestoes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.Sugestoes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.receita.dataPublicacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.receita.dataPublicacao)
        </dd>

        

    </dl>
</div>



<input type='button' onclick='history.back();' value='Voltar' class="btn btn-warning" />



@*-------------------------------Lista de comentários--------------------------------------*@


@if (Model.comentario.Count == 0)
{

    <h5>Seja o Primeiro a comentar esta deciliosa receita!</h5>
    
}
else
{
    foreach (var item in Model.comentario)
    {

        <table class="table table-bordered">
            <tr class="btn-primary">
                <th>
                    Nome
                </th>
                <th>Comentários</th>
                <th>Avaliação</th>
                
            </tr>

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    <br />
                    @Html.DisplayFor(modelItem => item.Descricao)
                    <br />
                    @Html.DisplayFor(modelItem => item.Estrelas)
                </td>
                
                
            </tr>



        </table>
    }
}

@using (Html.BeginForm())
    {

<div class="form-group">
    @Html.LabelFor(model => model.comentario, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.comment.Descricao, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.comment.Descricao, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Comentar" class="btn btn-default" />
    </div>
</div>
    }